<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_juego"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActividad">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutActividadMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layoutCabecera"
            android:layout_width="fill_parent"
            android:layout_height="143dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tele"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tele" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTexto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoPresentacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="Arial"
                android:text="@string/welcome1"
                android:textSize="15dp"
                android:typeface="serif" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/layoutBotones"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="1"
            android:orientation="horizontal"
            android:rowCount="3">

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/botonPlay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#ff0000"
                android:onClick=""
                android:text="@string/play"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/botonStats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#00ff00"
                android:onClick=""
                android:text="@string/stats"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/botonSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#0000ff"
                android:onClick=""
                android:text="@string/settings"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
